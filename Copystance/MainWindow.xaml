<ClipboardMonitorWindow x:Class="Copystance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ie="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:Copystance"
        xmlns:vm="clr-namespace:Copystance.ViewModel"
        mc:Ignorable="d"
        Visibility="Hidden"
        ClipboardUpdateCommand="{Binding ClipboardUpdateCommand}">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <tb:TaskbarIcon IconSource="icon.ico" PopupActivation="LeftClick" MenuActivation="RightClick">
            <tb:TaskbarIcon.TrayPopup>
                <Border 
                    MaxWidth="500"
                    MaxHeight="350"
                    MinHeight="200"
                    MinWidth="350"
                    BorderThickness="3"
                    Opacity="0.8"
                    BorderBrush="#FF15192C"
                    Background="#FF13255F"
                    CornerRadius="3">
                    <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto">
                        <ListBox BorderThickness="0" x:Name="ClipboardList" ItemsSource="{Binding ClipboardHistory}" SelectedItem="{Binding SelectedItem}" Background="#FF13255F">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel VerticalAlignment="Top"  Orientation="Vertical">
                                        <VirtualizingStackPanel.LayoutTransform>
                                            <ScaleTransform ScaleX="1" ScaleY="-1" />
                                        </VirtualizingStackPanel.LayoutTransform>
                                    </VirtualizingStackPanel>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="LayoutTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1" ScaleY="-1" />
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Margin" Value="2,10,2,0"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid MinHeight="20" MaxHeight="50" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                        <TextBlock Foreground="White" FontSize="13" Width="460" Text="{Binding Mode=OneWay}" TextWrapping="Wrap" FontFamily="Segoe UI Semilight" />
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Border>
            </tb:TaskbarIcon.TrayPopup>
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="shutdownTray" Header="Exit" Click="shutdownTray_Click" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</ClipboardMonitorWindow>